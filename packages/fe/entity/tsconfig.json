{
  "extends": "@megp/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/api/*": ["./src/api/*"],
      "@/components/*": ["./src/components/*"],
      "@/context/*": ["./src/context/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/models/*": ["./src/models/*"],
      "@/utilities/*": ["./src/utilities/*"]
    }
  },
  "include": [
    "./src/**/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../core-fe/src/components/notification"
  ],
  "exclude": [".turbo", ".next", "dist", "build", "node_modules"]
}
